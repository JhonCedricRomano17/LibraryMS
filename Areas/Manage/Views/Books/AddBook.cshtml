@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row align-items-center">

    <div class="col-sm-2 mx-auto">
        <h1>Add Book</h1>
        <form method="post" action="~/CreateBook">
            <div class="form-group">
                <label class="col-form-label">Title</label>
                <input type="Text" class="form-control" id="bktitle" name="bktitle" />
            </div>
            <div class="form-group">
                <label class="col-form-label">Author</label>
                <input type="Text" class="form-control" id="bkauthor" name="bkauthor" />
            </div>
            <div class="form-group">
                <label class="col-form-label">Publisher</label>
                <input type="text" class="form-control" id="bkpublisher" name="bkpublisher" />
            </div>

            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-success">Submit</button>
            </div>


        </form>
    </div>
</div>